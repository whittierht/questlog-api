{
  "openapi": "3.0.0",
  "info": {
    "title": "QuestLog API",
    "version": "1.1.0",
    "description": "A RESTful API for managing quests using Node.js, Express, and MongoDB."
  },
  "servers": [
    { "url": "https://questlog-api.onrender.com/api" },
    { "url": "http://localhost:3000/api" }
  ],
  "tags": [
    {
      "name": "Quests",
      "description": "Endpoints for creating, reading, updating, and deleting quests."
    }
  ],
  "paths": {
    "/quests": {
      "get": {
        "tags": ["Quests"],
        "summary": "List all quests",
        "responses": {
          "200": {
            "description": "List of all quests",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Quest" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Quests"],
        "summary": "Create a new quest",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/QuestCreate" },
              "example": {
                "title": "Run 3 miles",
                "description": "Evening run at the track",
                "difficulty": "medium",
                "category": "health",
                "rewardXp": 50,
                "isDaily": true,
                "dueDate": "2025-10-20T18:00:00.000Z"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Quest created successfully" },
          "400": { "description": "Validation error" }
        }
      }
    },
    "/quests/{id}": {
      "get": {
        "tags": ["Quests"],
        "summary": "Retrieve a quest by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "The ID of the quest to retrieve"
          }
        ],
        "responses": {
          "200": {
            "description": "Quest found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Quest" }
              }
            }
          },
          "400": { "description": "Invalid ID format" },
          "404": { "description": "Quest not found" }
        }
      },
      "put": {
        "tags": ["Quests"],
        "summary": "Update a quest by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "The ID of the quest to update"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/QuestUpdate" },
              "example": {
                "title": "Morning Yoga",
                "description": "Stretch for 20 minutes",
                "difficulty": "easy",
                "category": "health",
                "rewardXp": 25,
                "isDaily": true,
                "dueDate": "2025-10-21T08:00:00.000Z"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Quest updated successfully" },
          "400": { "description": "Validation error" },
          "404": { "description": "Quest not found" }
        }
      },
      "delete": {
        "tags": ["Quests"],
        "summary": "Delete a quest by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "The ID of the quest to delete"
          }
        ],
        "responses": {
          "200": {
            "description": "Quest deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "deleted": { "type": "boolean", "example": true }
                  }
                }
              }
            }
          },
          "400": { "description": "Invalid ID format" },
          "404": { "description": "Quest not found" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Quest": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "difficulty": {
            "type": "string",
            "enum": ["easy", "medium", "hard"]
          },
          "category": { "type": "string" },
          "rewardXp": { "type": "integer" },
          "isDaily": { "type": "boolean" },
          "dueDate": { "type": "string", "format": "date-time" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "QuestCreate": {
        "type": "object",
        "required": [
          "title",
          "description",
          "difficulty",
          "category",
          "rewardXp",
          "isDaily"
        ],
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "difficulty": {
            "type": "string",
            "enum": ["easy", "medium", "hard"]
          },
          "category": { "type": "string" },
          "rewardXp": { "type": "integer", "minimum": 1 },
          "isDaily": { "type": "boolean" },
          "dueDate": { "type": "string", "format": "date-time" }
        }
      },
      "QuestUpdate": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "difficulty": {
            "type": "string",
            "enum": ["easy", "medium", "hard"]
          },
          "category": { "type": "string" },
          "rewardXp": { "type": "integer" },
          "isDaily": { "type": "boolean" },
          "dueDate": { "type": "string", "format": "date-time" }
        }
      }
    }
  }
}
